
@page "/machineoverview"

<h1 class="page-title">All machines</h1>

@if (Machines == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Employee ID</th>
                <th>First name</th>
                <th>Last name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var machine in Machines)
            {
            <tr>
                <td><img src="@($"https://gillcleerenpluralsight.blob.core.windows.net/person/{machine.MachineId}-small.jpg")" class="rounded-circle" /></td>
                <td>@machine.MachineId</td>
                <td>@machine.Name</td>
                <td>@machine.MachineStatus</td>
                <td>@machine.SentDataDateTime</td>
                <td>
                    <a href="@($"machinedetail/{machine.MachineId}")" class="btn btn-primary table-btn">
                        <i class="fas fa-info-circle"></i>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}