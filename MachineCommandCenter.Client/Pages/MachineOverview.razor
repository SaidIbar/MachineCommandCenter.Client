@page "/machineoverview"
@page "/machineoverview/{MachineId}"
@inject NavigationManager NavigationManager
<head>
    <title>Machine Admin</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

</head>

<h1 class="page-title">All machines</h1>

@if (Machines == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <EditForm Model="@Machine" OnValidSubmit="@HandleValidSubmit">
        <div class="form-row align-items-center" style="padding-bottom:20px">
            <div class="col-md-4">
                <InputText id="Name" class="form-control col-md-12" @bind-Value="@Machine.Name" placeholder="Enter machine name" aria-describedby="button-addon2"></InputText>
            </div>
            @*<div class="col-md-2">
            <InputSelect @bind-Value="@Machine.MachineStatus">
                @foreach (var status in MachineStatuses)
                    {
                    <option value="1">Off-line</option>
                    <option value="0">Online</option>
                    }
            </InputSelect>
        </div>*@
            <div class="col-md-2">
                <input type="submit" value="Save" id="button-addon2" class="btn btn-secondary mb-auto" />
            </div>
            <div class="col-md-4">
            </div>
        </div>
</EditForm>
    <table class="table table-striped col-6" style="padding-top:20px">
        <thead>
            <tr>
                <th>Machine Name</th>
                <th>Status</th>
                <th>Status change date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var machine in Machines)
            {
                <tr>
                    <td>@machine.Name</td>
                    <td>@machine.MachineStatus</td>
                    <td>@machine.SentDataDateTime</td>
                    <td>
                        @if (@machine.MachineStatus.ToString() == ("Online"))
                        {
                            <a class="btn btn-secondary" href="@($"machineoverview/{machine.MachineId}")" role="button">Set Off-line</a>


                        }
                        else
                        {
                            <a class="btn btn-secondary" href="@($"machineoverview/{machine.MachineId}")" role="button">Set On-line</a>

                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

